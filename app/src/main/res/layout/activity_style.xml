<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="#1E88E5">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/common_tab_bg"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/white_back" />

            <ImageView
                android:id="@+id/seartch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/common_tab_bg"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="侧拉样式"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="8pt"
            android:listSelector="#ff0000"
            android:verticalSpacing="0pt"
            android:visibility="visible"></ListView>
    </LinearLayout>

    <com.example.ronny_xie.gdcp.view.SearchView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></com.example.ronny_xie.gdcp.view.SearchView>

    <GridView
        android:id="@+id/gv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"></GridView>
    <TextView
        android:layout_margin="10dp"
        android:visibility="gone"
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:text="没有找到数据"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

<include layout="@layout/style_load_data"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.percent.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="70%">


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/m_contacts"
            android:drawablePadding="15dp"
            android:hint="请输入学号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="15%"
            android:alpha="0.4"
            app:layout_marginTopPercent="15%"
            app:layout_widthPercent="0.6%" />

    </android.support.percent.PercentFrameLayout>

    <android.support.percent.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="40%"
        app:layout_widthPercent="70%">


        <EditText
            android:id="@+id/userpsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_shape"
            android:drawableLeft="@drawable/m_lock"
            android:drawablePadding="15dp"
            android:hint="请输入密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="15%"
            app:layout_marginTopPercent="15%"
            android:alpha="0.4"
            app:layout_widthPercent="0.6%" />

    </android.support.percent.PercentFrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="70%">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:maxLength="4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="5%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginTopPercent="74%"
        app:layout_widthPercent="52%">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:checked="true" />

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="我已阅读并同意"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/terms"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="服务条款"
            android:textColor="@color/app_color" />
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@drawable/login_btn"
        android:text="登录"
        android:textColor="@drawable/btn_text_color"
        android:textSize="18sp"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="80%"
        app:layout_widthPercent="45%" />


</android.support.percent.PercentRelativeLayout>
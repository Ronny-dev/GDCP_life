<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/title_bar_bg">

            <ImageView
                android:id="@+id/jw_main_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:padding="15dp"
                android:src="@drawable/white_back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="广交教务"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/list_pager"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/jw_imagebutton2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#1E88E5"
                    android:text="查询成绩" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/jw_imagebutton3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#1E88E5"
                    android:text="查询课表" />

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/jw_imagebutton4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#1E88E5"
                    android:text="查询选修" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jw_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="交院新闻"
                android:textSize="24dp"
                android:visibility="invisible" />

            <com.example.ronny_xie.gdcp.view.ListViewForScrollView
                android:id="@+id/jw_listView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.example.ronny_xie.gdcp.view.ListViewForScrollView>

            <TextView
                android:id="@+id/jw_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="媒体聚焦"
                android:textSize="24dp"
                android:visibility="invisible" />

            <com.example.ronny_xie.gdcp.view.ListViewForScrollView
                android:id="@+id/jw_listView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"></com.example.ronny_xie.gdcp.view.ListViewForScrollView>
        </LinearLayout>
    </LinearLayout>

</com.gc.materialdesign.views.ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/jw_back"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_bar_layout"
        layout="@layout/main_bar_include" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="卡务系统"
        android:alpha="0.6"
        app:layout_marginLeftPercent="25%"
        app:layout_marginTopPercent="12%"
        app:layout_widthPercent="30%"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="75%">

        <ImageView
            android:id="@+id/fragment03_image"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/fragment03_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_shape"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:maxLength="5"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/fragment_card_login_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@drawable/login_btn"
        android:text="登录"
        android:textColor="@drawable/btn_text_color"
        android:textSize="18sp"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="12%"
        app:layout_marginTopPercent="52%"
        app:layout_widthPercent="45%" />

</android.support.percent.PercentRelativeLayout>
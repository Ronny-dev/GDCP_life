<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/jw_back"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:alpha="0.6"
        android:text="教务系统"
        android:textSize="23sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:background="@drawable/blaci_tr_bg"
        >

        <TextView
            android:id="@+id/jw_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/jw_new"
            android:text="校园新闻"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/jw_xskc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/kcb"
            android:clickable="true"
            android:text="学生课程"

            android:textColor="#ffffff"
            />


        <TextView
            android:id="@+id/jw_xscj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:text="学生成绩"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/xscj"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/jw_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/more"
            android:gravity="center_horizontal"
            android:text="More"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/gdcp"

            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="广东交通职业技术学院"
        android:textColor="#ffffff"
        />

</RelativeLayout>